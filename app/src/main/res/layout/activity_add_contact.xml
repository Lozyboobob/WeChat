<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_blue">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_contact"
            style="@style/simple_back_button"
            android:clickable="true" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:text="@string/save"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:clickable="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/scan_layout"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        style="@style/simple_green_button_background">

        <ImageView
            android:id="@+id/scan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/vertical_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/binerycode50" />

        <TextView
            android:id="@+id/bt_scan"
            style="@style/simple_green_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Scan Binary Code" />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/scan_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/un_written"
                android:text="name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="2dp"
                android:textSize="22sp"
                android:background="@color/my_dark_grey" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Phone_text"
                style="@style/purple_title"
                android:text="Phone" />

            <ImageView
                android:layout_below="@id/Phone_text"
                android:id="@+id/add_phone_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/add_detail50" />

            <TextView
                android:id="@+id/phone"
                android:layout_below="@id/Phone_text"
                android:layout_toRightOf="@+id/add_phone_button"
                style="@style/un_written"

                android:padding="10dp"
                android:text="new phone" />

            <TextView
                android:layout_below="@id/phone"
                android:layout_toRightOf="@+id/add_phone_button"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="2dp"
                android:textSize="22sp"
                android:background="@color/my_dark_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Label_text"
                style="@style/purple_title"
                android:text="Label" />

            <ImageView
                android:layout_below="@id/Label_text"
                android:id="@+id/new_label_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/add_detail50" />

            <TextView
                android:id="@+id/label"
                android:layout_below="@id/Label_text"
                android:layout_toRightOf="@+id/new_label_button"
                style="@style/un_written"

                android:text="New Label>"
                android:textSize="22sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_below="@id/label"
                android:layout_toRightOf="@+id/new_label_button"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="2dp"
                android:textSize="22sp"
                android:background="@color/my_dark_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_title"
                style="@style/purple_title"
                android:text="Address"

                />

            <TextView
                android:id="@+id/address"
                style="@style/un_written"
                android:layout_toRightOf="@+id/address_title"
                android:text="add address" />

            <TextView
                android:layout_toRightOf="@id/address_title"
                android:layout_below="@id/address"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="2dp"
                android:textSize="22sp"
                android:background="@color/my_dark_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/purple_title"
                android:text="Addition"
                android:id="@+id/addition_title" />

            <TextView
                android:id="@+id/addition"
                style="@style/un_written"
                android:layout_toRightOf="@+id/addition_title"
                android:text="add addition" />

            <TextView
                android:layout_toRightOf="@id/addition_title"
                android:layout_below="@id/addition"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="2dp"
                android:textSize="22sp"
                android:background="@color/my_dark_grey" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/addition"
                android:layout_centerHorizontal="true"
                android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
